<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.nav.t_uber.SignUp">


    <AutoCompleteTextView
        android:id="@+id/FirstName"
        android:layout_width="352dp"
        android:layout_height="39dp"
        android:hint="First Name"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <AutoCompleteTextView
        android:id="@+id/LastName"
        android:layout_width="353dp"
        android:layout_height="41dp"
        android:hint="Last Name"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/FirstName"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <AutoCompleteTextView
        android:id="@+id/StudenEmail"
        android:layout_width="354dp"
        android:layout_height="41dp"
        android:hint="Email"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/LastName"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <AutoCompleteTextView
        android:id="@+id/UserPhoneNum"
        android:layout_width="355dp"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Phone (optional)"
        android:inputType="phone"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/UserPassword"
        app:layout_constraintHorizontal_bias="0.0" />

    <AutoCompleteTextView
        android:id="@+id/UserPassword"
        android:layout_width="355dp"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/StudenEmail"
        app:layout_constraintHorizontal_bias="0.0" />



    <Button
        android:id="@+id/tutor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="32dp"

        android:background="#0097a7"

        android:text="        Tutor        "
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/student_button" />

    <Button
        android:id="@+id/student_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"

        android:background="#0288d1"
        android:text="      Student      "
        android:textAllCaps="false"

        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="172dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register New Account As ( Student or Tutor) "
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tutor_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/UserPhoneNum"
        app:layout_constraintVertical_bias="0.517" />

</android.support.constraint.ConstraintLayout>